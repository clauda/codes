<header class="site-head" <% if (theme.cover) { %> style="background-image: url(<%- theme.cover %>)" <% } %>>
  <div class="vertical">
    <div class="site-head-content inner">
      
      <% if (theme.logo) { %> 
        <a class="blog-logo" href="<%- config.root %>">
        <% if (page.title) { %> 
          <img src="<%- theme.icon %>" alt="Blog"/>
        <% } else { %>
          <img src="<%- theme.logo %>" alt="Blog"/>
        <% } %>
        </a> 
      <% } %>

      <h1 class="blog-title"><a href="/"><%- config.title %></a></h1>
      <h2 class="blog-description"><%- config.subtitle %></h2>
    </div>
  </div>
</header>